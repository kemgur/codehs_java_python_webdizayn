# Set value of secret number
speed(0)
secret_number = 7

# This function draws a checkmark 
def draw_checkmark():
    clear()
    penup()
    backward(50)
    right(90)
    pendown()
    pensize(10)
    color("green")
    left(45)
    forward(50)
    left(90)
    forward(100)
    penup()
    
# This function draws an up arrow 
def draw_up_arrow():
    clear()
    color("yellow")
    pensize(10)
    right(90)
    forward(100)
    backward(150)
    right(45)
    forward(50)
    backward(50)
    left(90)
    forward(50)
    backward(50)
    left(45)
    setposition(0,0)

# This function draws a down arrow 
def draw_down_arrow():
    clear()
    pensize(10)
    color("red")
    left(90)
    forward(100)
    backward(150)
    right(45)
    forward(50)
    backward(50)
    left(90)
    forward(50)
    backward(50)
    right(135)
    setposition(0,0)

# Ask the user for a number
user_number = int(input("Enter a number 1-10: "))
#user_number = 7


while user_number != secret_number:
    if user_number > secret_number:
        draw_down_arrow()
        user_number = int(input("That is not the number. Enter a number 1-10: "))
    else:
        draw_up_arrow()
        user_number = int(input("That is not the number. Enter a number 1-10: "))        
draw_checkmark()