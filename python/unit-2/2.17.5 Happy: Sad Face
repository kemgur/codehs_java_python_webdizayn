speed(0)

# This function draws one of the smiley face's eyes
def draw_eye():
    color("black")
    begin_fill()
    pendown()
    circle(10)
    end_fill()
    penup()
    
# Ask user if they are happy
happy = input("Are you happy? (Yes/No): ")

# Draw yellow face circle
penup()
right(90)
forward(100)
left(90)
pendown()
color("yellow")
begin_fill()
circle(100)
end_fill()
penup()
 
# Move up and draw eyes using function
left(90)
forward(125)
right(90)
backward(30)
draw_eye()
forward(60)
draw_eye()

# If user answers that they are happy, draw a smile
if happy == "Yes":    
    backward(30)
    right(90)
    forward(40)
    left(90)
    backward(60)
    right(90)
    pendown()
    pensize(5)
    circle(60,180)
    
# If user did not answer that they are happy, draw a frown
else:
    forward(30)
    right(90)
    forward(80)
    left(180)
    pendown()
    pensize(5)
    circle(60,180)