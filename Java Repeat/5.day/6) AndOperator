package day05ifelsestatements;

public class AndOperator {


    // && operator

    // I have zoom, I can watch instructor

    //I have PC, I can write my codes

    // &&
    //true and true   => true
    //false and true   =>false
    //true and false => false
    //false and false => false


    // age 0 - 5 baby

    //

    public static void main(String[] args) {

        //If I have money, I can buy something

        //If I have car, I can go shopping

        //Can I go to shopping center and buy something?

        boolean money = false;
        boolean transportation = false;

        //true and true  => true

        //false and true => false

        //true and false => false

        //false and false =>


        if(money && transportation){
            System.out.println("I can go shopping and buy something");
        }else{
            System.out.println("I cannot buy anything");
        }


    }



}